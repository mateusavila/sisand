@import "normalize"
@import "functions"
@import "base"

html
	background #e5e5e5
fieldset
	border none
	padding 0.35em 0 0.625em
.session-login
	background-image: url('../img/background.jpg')
	bgCover()
	height 100vh
	min-height 890px
	display flex
	align-items center
	justify-content center
	flex-wrap wrap
.login-area
	width 615px
	height 666px
	background #ffffff
	padding 50px 90px
	position relative
	border-radius 4px
	box-shadow 2px 4px 6px rgba(0,0,0,0.2)
.login-header
	width 100%
	text-align center
	margin-bottom 30px
	img
		display inline-block
.login-form
	box()
	.show-error
		font-family 'Roboto', sans-serif
		font-size 12px
		color #ff7675
		display block
		margin 5px 0 0
		display none
		&.active
			display block
	fieldset
		margin-bottom 10px
	label
		text-transform uppercase
		font-family 'Roboto', sans serif
		color #676767
		display inline-block
		margin-bottom 7px
	input[type=email], input[type=password]
		border-radius 4px
		background #f2f2f5
		border 1px solid #E5E5E5
		font-family 'Roboto', sans serif
		font-size 16px
		color #c4c4c4
		font-weight normal
		height 40px
		width 100%
		padding 0 15px
		background-size 18px auto
		background-repeat no-repeat
		background-position 98% center
		placeholderColor(#c4c4c4, #676767)
		transitions(.2s)
		&:hover
			transitions(.2s)
			border-color darken(#E5E5E5, 10%)
		&:focus
			transitions(.2s)
			border-color darken(#E5E5E5, 15%)
		&.error
			border-color #d63031
			background-color #ff7675
			background-image: url('../img/error-triangle.svg')
			background-size 18px auto
			background-repeat no-repeat
			background-position 98% center
			placeholderColor(#fff, #fff)
			transitions(.2s)
	
.login-submit-area
	margin-top 25px
	box()
.login-new-user
	box()
	margin-top 70px
.btn
	display block
	font-family 'Open Sans', sans-serif
	text-align center
	width 100%
	height 45px
	line-height 45px
	border 0
	cursor pointer
	text-decoration none
	&.login-submit
		background #f58733
		color #ffffff
		font-size 18px
		font-weight bold
		text-transform uppercase
		border-radius 4px
		transitions(.2s)
		&:hover
			transitions(.2s)
			background darken(#f58733, 10%)
	&.new-account
		background #c1d7aa
		color #ffffff
		font-weight bold
		border-radius 4px
		font-size 18px
		transitions(.2s)
		&:hover
			transitions(.2s)
			background darken(#c1d7aa, 10%)
.login-loading
	filler()
	background #ffffff
	z-index 10
	showActive()
	border-radius 4px
	img
		centerPerfect()
		max-width 120px
.login-result
	filler()
	background #ffffff
	showActive()
	border-radius 4px
	z-index 10
	font-family 'Roboto', sans-serif
	.login-result-center
		centerPerfect()
		width calc(100% - 80px)
	h2
		font-weight normal
		margin 0 0 30px
		text-align center
		color #676767
		font-size 18px
@media all and (max-width: 700px)
	.session-login
		min-height 550px
	.login-area
		width calc(100% - 20px)
		margin 0 auto
		padding 40px 60px

@media all and (max-width: 550px)
	.btn
		&.login-submit
			font-size 16px
		&.new-account
			font-size 16px
	.login-area
		padding 30px 30px
		height auto
	.login-header img
		max-width 200px
		height auto
	.login-new-user
		margin-top 40px
	.login-submit-area
		margin-top 20px

@media all and (max-height: 450px)
	.session-login
		min-height 710px